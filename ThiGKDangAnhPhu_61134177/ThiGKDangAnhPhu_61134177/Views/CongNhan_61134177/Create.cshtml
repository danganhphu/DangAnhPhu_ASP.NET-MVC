<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

<style>

    .upload-img {
        font-size: 16px;
        background-color: white;
        border-radius: 50px;
        box-shadow: 5px 5px 10px;
        width: 350px;
        outline: none;
    }

    ::-webkit-file-upload-button {
        color: white;
        background-color: #206a5d;
        border: none;
        border-radius: 50px;
        box-shadow: 1px 0 1px 1px #6b4559;
