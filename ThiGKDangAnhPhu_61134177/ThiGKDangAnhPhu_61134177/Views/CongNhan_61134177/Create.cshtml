            @Html.LabelFor(model => model.MaTo, "Tên Tổ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaTo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTo, "", new { @class = "text-danger" })
            </div>
        </div>

