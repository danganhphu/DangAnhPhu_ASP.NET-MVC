@model KT0720DangAnhPhu_61134177.Models.SINHVIEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string gtinh = "";
}

<style>
    table {
        border-collapse: collapse;
        margin: 0px 25px 20px;
        font-size: 1.2em;
        min-width: 400px;
        border-radius: 6px 6px 0 0;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    .table-caption > b {
        padding-bottom: 30px;
        color: #B04120;
    }

    table th, table td {
        padding: 12px 15px;
    }

    .img-circle {
        border-radius: 50%;
    }

    .info-svien {
        color: #065C73;
    }

    p > a {
        color: #000000;
        text-decoration: none;
        font-size: 1.4em;
    }

        p > a:hover {
            color: #1080DE;
        }
</style>

<table border="1" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption class="table-caption"><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img class="img-circle" src="/images/@Html.DisplayFor(model => model.AnhSV)" width="100" height="100" /></td>
                    <td class="info-svien">Mã Sinh Viên:</td>
                    <td>@Html.DisplayFor(model => model.MaSV)</td>
                </tr>
                <tr>
                    <td class="info-svien">Họ Sinh Viên:</td>
                    <td>@Html.DisplayFor(model => model.HoSV)</td>
                </tr>
                <tr>
                    <td class="info-svien">Tên Sinh Viên:</td>
                    <td>@Html.DisplayFor(model => model.TenSV)</td>
                </tr>
                <tr>
                    <td class="info-svien">Giới tính:</td>
                    <td>
                        @{
                            gtinh = Model.GioiTinh == true ? "Nam" : "Nữ";
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <td class="info-svien">Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                </tr>

                <tr>
                    <td class="info-svien">Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
                <tr>
                    <td class="info-svien">Tên Lớp:</td>
                    <td>@Html.DisplayFor(model => model.LOP.TenLop)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaSV })&nbsp;&nbsp;
    @Html.ActionLink("Quay lại", "Index")
</p>